@model UserViewModel

<h2>Vem vill du skriva till?</h2>

@foreach (Message u in Model._users)
{
                <div class"card">

                    <a  class="btn btn-primary text-light"
                              style="background-color:#ff6219; margin-bottom:2rem;"
                              asp-controller="Meddelande"
                              asp-action="Add"
                              //Användaren!!!
                              asp-route-senderId="@ViewBag.Id"
                              asp-route-receiverId="@u.id">
                              @u.FirstName @u.LastName 
                   </a>

                </div>
}