@model RegisterViewModel

//Vill lägga in javascript, sorry lämnar det såhär for now

<h1>Registrera dig</h1>
<div asp-validation-summary="All" class="text-danger">here there be errors</div>
<form method="post" asp-action="Register" onsubmit="">
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Epost: </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="Email" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Förnamn: </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="FirstName" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Efternamn: </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="LastName" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Telefon: </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="Phone" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Address: </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="Address" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Lösenord: </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="Password" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Bekräfta lösenord: </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="ConfirmedPassword" class="form-control" />
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-2">
			<label>Privat: </label>
		</div>
		<div class="col-sm-4">
			<input asp-for="IsPrivate" class="btn-check" />
		</div>
	</div>
	<div class="form-group-row">
		<button type="submit">Registrera</button>
	</div>
</form>

<br />
