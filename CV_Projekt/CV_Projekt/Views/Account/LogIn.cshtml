@model LogInViewModel

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <div asp-validation-summary="All" class="text-danger">here there be errors</div>

                                <form method="post" asp-action="LogIn">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fa-solid fa-robot fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Curriculum Vitae</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Logga in</h5>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="text" id="form2Example17" class="form-control form-control-lg" asp-for="UserName" />
                                        <label class="form-label" for="form2Example17">Användarnamn</label>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="password" id="form2Example27" class="form-control form-control-lg" asp-for="Password"/>
                                        <label class="form-label" for="form2Example27">Lösenord</label>
                                    </div>

                                    <div>
                                        <label class="form-label" for="form2Example27">Kom ihåg mig</label>
                                        <input type="checkbox" asp-for="RememberMe" />
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Logga In</button>
                                    </div>

                                    
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Har du inget konto? Registrera dig <a href="/Account/Register"
                                                                  style="color: #393f81;">Här!</a>
                                    </p>
                                    
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



