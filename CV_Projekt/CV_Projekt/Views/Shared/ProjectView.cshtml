@model ProjectViewModel

@{
	ViewData["Title"] = "Projekt";
}

<div asp-validation-summary="All" class="text-danger"></div>

<h1>Projekt</h1>

<form asp-action="ProjectView" method="post">
	<input asp-for="" type="text" />
	<br />
	<input asp-for="StartDate" type="date" />
	<br />
	<input asp-for="EndDate" type="date" />
	<br />
	<textarea asp-for="Description"></textarea>
	<br />
	<input asp-for="CreatorId" type="number" />
	<button type="submit">Skapa</button>
</form>

<div>
	<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	Lägg till
	</button>
	<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
		@foreach (var project in Model.Users)
		{
			<a class="dropdown-item" href="#">@project.FirstName @project.LastName</a>
		}
	</div>
</div>

<input type="checkbox" />

<div class="dropdown">
	<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		Välj projekt
	</button>
	<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
		@foreach (var project in Model.Projects)
		{
			<a class="dropdown-item" href="#">@project.Title</a>
		}
	</div>
</div>